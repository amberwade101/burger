<div class="row">
  <center>
 
    <div class="col-md-4">
      <h3 class="title">Burgers Available</h3>
      <div id="burgersready">

       
        {{#each burgers}}
        {{#unless devoured}}
        <form action="api/update{{id}}" method="POST">
          <div class="input-group">
        <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
        <button class="btn btn-success eat-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
      </div>


    <div class="col-md-4">
      <h3 class="submitFont">Burgers Devoured</h3>
      <div id="eaten">

    
        {{#each burgers}}
          {{#if devoured}}
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>
